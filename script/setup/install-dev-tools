#!/usr/bin/env bash

#
# Install developer tools to $GOBIN (or $GOPATH/bin if unset)
#
set -eu -o pipefail

go get -u github.com/vbatts/git-validation
go get github.com/cpuguy83/go-md2man@v1.0.10

gometalinter='https://github.com/alecthomas/gometalinter/releases/download/v3.0.0/gometalinter-3.0.0-linux-amd64.tar.gz'

curl -s -L "${gometalinter}" \
  | tar --strip-components=1 -C "${GOPATH}/bin/" -zvx

go mod tidy
